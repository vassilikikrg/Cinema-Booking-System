@model CinemaTicketBooking.Models.Reservation

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Screening.Movie.Name" class="control-label"></label>
                <select asp-for="Screening.Movie.Name" class ="form-control" asp-items="ViewBag.ScreeningName"></select>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Name" class="control-label"></label>
                <select asp-for="Customer.Name" class="form-control" asp-items="ViewBag.CustomerName"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfSeats" class="control-label"></label>
                <input asp-for="NumberOfSeats" class="form-control" min=1 max=20/>
                <span asp-validation-for="NumberOfSeats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
